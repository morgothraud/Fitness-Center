@model IEnumerable<FitnessCenterv2.Equipment>

@{
    ViewBag.Title = "ManageEquipment";
}

<h2>Manage Equipment</h2>
@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
<p>
<p>
    @Html.ActionLink("Add New Equipment", "AddEquipment")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @if (item.IsAvaliable == true)
            {
                <p>Avaliable</p>
            }
            @if (item.IsAvaliable == false)
            {
                <p>Not Avaliable</p>
            }
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEquipment", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteEquipment", new { id=item.ID })
        </td>
    </tr>
}

</table>
